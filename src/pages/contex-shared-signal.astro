---
import MainLayout from "../layouts/MainLayout.astro";
import { CounterShared } from "../components/counter-shared";
import { Island } from	"../components/random-island";

const initialVal = 5;
---

<MainLayout title="Shared Signal Between Islands/Components">
    <p>Use of context for shared signal of islands/components</p>
        
    <hr />

    <CounterShared initialVal={initialVal} />

    <Island initialVal={initialVal} />
        
    <hr />

    <p>
        <strong>Source: </strong>
        <a
            href="https://github.com/thejackshelton/astro-qwik-global-state-example/tree/main"
            target="_blank"
        >
            https://github.com/thejackshelton/astro-qwik-global-state-example/tree/main
        </a>
    </p>
</MainLayout>